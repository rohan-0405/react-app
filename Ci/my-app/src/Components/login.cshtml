@{
}
<!DOCTYPE html>
<html lang="en">

<head>  
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login Page</title>
    <link rel="stylesheet" href="~/css/bootstrap.min.css">
    <!-- <script src="/Js/bootstrap.bundle.min.js"></script> -->
    <link rel="stylesheet" href="~/css/Login.css">

  
</head>

<body>
    <div class="container-fluid">
        <div class="row">

          
            <div class="col-lg-8 col-md-12 col-sm-12 col-xs-12 ">
                <div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="carousel" data-bs-interval="5000">

                    <div class="carousel-inner">
                        @foreach (var i in Model.banners)
                        {
                            @if (i.SortOrder == 1)
                            {
                                <div class="carousel-item active" data-bs-interval="5000">
                                    <img src="@i.Image" class="d-block w-100 carousel-img object-fit-none" alt="...">
                                    <div class="carousel-caption d-none d-md-block ">
                                        <h2>Sed ut perspiciatis unde omnis iste natus voluptatem.</h2>
                                        <p>
                                            @i.Text
                                        </p>
                                    </div>
                                </div>
                            }
                            else
                            {
                                <div class="carousel-item " data-bs-interval="5000">
                                    <img src="@i.Image" class="d-block w-100 carousel-img object-fit-none" alt="...">
                                    <div class="carousel-caption d-none d-md-block ">
                                        <h2>Sed ut perspiciatis unde omnis iste natus voluptatem.</h2>
                                        <p>
                                            @i.Text
                                        </p>
                                    </div>
                                </div>
                            }
                        }
                    </div>

                    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>
            </div>

            <div class="align-self-center col-lg-4 col-md-12 col-sm-12 col-xs-12 mt-2 rgt_div">
                <div class="row justify-content-center">
                    <div class="col-lg-9 col-md-9 col-sm-9">


                        <form asp-controller="User" asp-action="Login" method="post" class="form-horizontal" >
                            <div class="mb-3">
                            
                                <label asp-for="Email" class="form-label">Email address</label>
                                <input asp-for="Email" type="email" class="form-control" placeholder="Email" id="exampleInputEmail1" 
                                       aria-describedby="emailHelp">
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="Password" class="form-label">Password</label>
                                <input asp-for="Password" type="password" class="form-control" placeholder="Password" 
                                       id="exampleInputPassword1">
                                <span asp-validation-for="Password" class="text-danger" ></span>

                            </div>
                            <span class="text-danger d-flex justify-content-center">@ViewBag.Email</span>
                            <span class="text-info d-flex justify-content-center">@ViewBag.UserInActive</span>
                            <div class="mt-4">
                                <button type="submit" class="btn">Login</button>
                            </div>
                            <div class="mt-3 text-center">
                                <a nav-link  asp-action="Forget" asp-controller="User">Lost Password?</a>
                            </div>
                            <div class="mt-2 text-center">
                                <span>Donâ€™t have an account? <a nav-link text-dark asp-area="" asp-controller="User" asp-action="Registration">Create Account</a>  </span>
                            </div>
                            
                        </form>

                    </div>
                </div>
                
                <div class="text-center text-secondary mt-4 ">
                    <span class="align-bottom">Privacy Policy</span>
                </div>
            </div>
           
        </div>
    </div>
   <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

</body>
</html>
